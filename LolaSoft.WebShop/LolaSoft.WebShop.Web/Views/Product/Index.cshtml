@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Index";
}

<h2>All products</h2>

<p>@Html.ActionLink("Create new","Create","Product", null, new { @class = "btn btn-info" })</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Category.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.CreatedOn)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CreatedOn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id })
                    @Html.ActionLink("Details", "Details", new {id = item.Id })
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id })
                </td>
            </tr>
        }

    </tbody>
</table>

