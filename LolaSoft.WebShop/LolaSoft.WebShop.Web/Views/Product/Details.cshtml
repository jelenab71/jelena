@model DetailsProductViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details of product</h2>

<div class="form-group">
   @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
   <div class="col-md-10">
       @Html.TextBoxFor(m => m.Name, new {@readonly = "readonly" })
   </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Price, new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Price, new {@readonly = "readonly" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.StockQuantity, new {@class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.StockQuantity, new {@readonly = "readonly" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(m => m.CreatedOn, new {@class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.CreatedOn, new {@readonly = "readonly" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Categories, new {@class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.CategoryId, Model.Categories)
    </div>
</div>

